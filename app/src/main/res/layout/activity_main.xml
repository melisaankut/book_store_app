<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ScrollView
            android:id="@+id/main_ver_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/light"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="191dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/kithub_logo_blue" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/kithub_text_blue" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/test"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageButton
                            android:id="@+id/button_drawer"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/light"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/hamburger"
                            android:contentDescription="@string/open_drawer" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="410dp"
                    android:background="@color/light"
                    android:layout_height="60dp"
                    android:gravity="center">


                    <ImageButton
                        android:id="@+id/Main_search_button"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/light"
                        app:srcCompat="@drawable/main_search_bar_button"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/nexa_bold"
                        android:text="En Çok İnenler"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/en_cok_inenler"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/light"
                        android:fontFamily="@font/nexa_light"
                        android:text="daha fazla"
                        android:textColor="@color/orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_page_best_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:layout_marginLeft="15dp"
                        android:text="Çok satanlar"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/cok_satanlar"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/light"
                        android:text="daha fazla"
                        android:textColor="@color/orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_page_best_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/felsefe_id"
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:layout_marginLeft="15dp"
                        android:text="Yeni ürünler"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/yeni_urunler"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/light"
                        android:fontFamily="@font/nexa_light"
                        android:text="@string/more"
                        android:textColor="@color/orange" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_page_new_books"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/son"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/son_yazısı"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_light"
                        android:text="© Copyright 2020 KitHub Kitap Mağazacılık ve Pazarlama A.Ş. Tüm hakları saklıdır."
                        android:textColor="@color/darkblue" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fontFamily="@font/nexa_bold"
        android:background="@color/orange"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/light"
        app:menu="@menu/drawer_menu_guest" />


</androidx.drawerlayout.widget.DrawerLayout>
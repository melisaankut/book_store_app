<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:id="@+id/order_history_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    android:background="@color/light"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light">


        <TextView
            android:id="@+id/order_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/order_price"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/order_photo"
            android:ellipsize="end"
            android:fontFamily="@font/nexa_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:id="@+id/order_photo"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="64dp">

        </ImageView>


        <TextView
            android:id="@+id/order_history_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="43dp"
            android:layout_toEndOf="@+id/order_photo"
            android:text="+2"
            android:textSize="30sp"></TextView>

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"


            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="51dp"
            android:layout_toEndOf="@+id/order_history_quantity"
            android:fontFamily="@font/nexa_bold"
            android:text="Product Price"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="14dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/detail"
            android:scaleType="fitXY">


        </ImageView>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="127dp"

            android:fontFamily="@font/nexa_bold"
            android:text="Tarih"
            android:textColor="@color/orange"
            android:textSize="20sp">

        </TextView>


    </RelativeLayout>















</androidx.cardview.widget.CardView>

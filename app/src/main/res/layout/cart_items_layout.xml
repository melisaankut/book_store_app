<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:id="@+id/card_items"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    android:background="@color/light"
    android:orientation="vertical"
    android:fitsSystemWindows="true"


    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="250dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cart_product_photo"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="41dp"
            android:layout_marginRight="-338dp"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@id/cart_product_photo"
            android:text="Product Name"
            android:textSize="25sp">

        </TextView>

        <ImageView
            android:id="@+id/cart_product_photo"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="20dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="270dp"


            >

        </TextView>


        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/cartItem_product_quantity1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="140dp"
            app:backGroundColor="@color/darkblue"

            app:initialNumber="1">


        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    </RelativeLayout>




</androidx.cardview.widget.CardView>
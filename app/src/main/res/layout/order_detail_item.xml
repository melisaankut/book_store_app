<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_detail_item"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:cardElevation="15dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light">


        <TextView
            android:id="@+id/order_detail_item_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="-338dp"
            android:layout_marginBottom="35dp"
            android:layout_toRightOf="@id/order_detail_item_photo"
            android:ellipsize="end"
            android:fontFamily="@font/nexa_bold"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="@color/blue"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:id="@+id/order_detail_item_photo"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp">

        </ImageView>

        <TextView
            android:id="@+id/order_detail_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_name"


            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/nexa_bold"
            android:text="Product Price"
            android:textColor="@color/blue"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/order_detail_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/nexa_bold"
            android:text="x?"
            android:textColor="@color/blue"
            android:textSize="15sp">

        </TextView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
